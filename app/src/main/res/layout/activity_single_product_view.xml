<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@mipmap/backgroundimage"
    tools:context=".SingleViewActivity">


    <TableLayout
        android:id="@+id/table1"
        android:background="@color/colorHeaderBack"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="10dp"
                android:layout_height="50dp"/>


            <Button
                android:id="@+id/btn_checkout"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/checkout"/>

            <TextView
                android:textColor="@color/colorAccent"
                android:textStyle="italic"
                android:text="Items: No"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:id="@+id/itemCount"
                android:layout_width="180dp"
                android:layout_height="25dp"/>

            <Button
                android:id="@+id/btn_logout"
                android:background="@mipmap/logout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

        </TableRow>

    </TableLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/image"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image"
            android:id="@+id/title"
            android:layout_width="350dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            android:text="DUmmy 01"/>

        <TextView
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignRight="@+id/title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="4.7"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rating"
            android:layout_marginTop="3dp"
            android:layout_alignRight="@+id/title"
            android:layout_marginLeft="5dp"
            android:background="@color/colorstasus"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="4.7"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_text"
            android:layout_marginTop="15dp"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/title"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"/>

        <TextView

            android:layout_marginLeft="10dp"
            android:layout_below="@+id/description_text"
            android:id="@+id/Price"
            android:layout_width="350dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="25sp"
            android:text="DUmmy 01"/>


        <TextView
            android:layout_marginTop="11dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/Price"
            android:id="@+id/countDes"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:text="How much do you want? :"/>


        <TextView
            android:layout_marginTop="11dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/countDes"
            android:id="@+id/warning"
            android:layout_width="180dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/colorstasus"
            android:textSize="15sp"
            android:text="Cart full ! "/>

        <Button
            android:id="@+id/minus"
            android:layout_marginTop="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Price"
            android:layout_marginLeft="190dp"
            android:text="-"
            android:background="@mipmap/minus"/>

        <TextView

            android:layout_marginTop="10dp"
            android:layout_marginLeft="220dp"
            android:layout_below="@+id/Price"
            android:id="@+id/count"
            android:layout_width="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            android:text="1"/>

        <Button
            android:id="@+id/plus"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/Price"
            android:textSize="5dp"
            android:background="@mipmap/plus"/>


        <Button
            android:id="@+id/addtocart"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:background="@mipmap/addtocart"
            android:layout_below="@+id/plus"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="170dp"/>
    </RelativeLayout>


</RelativeLayout>