<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".SingleViewActivity">
    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_margin="5dp"
        android:background="@drawable/title_bar_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/checkout"/>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_below="@+id/titleBar"
            android:layout_margin="5dp"
            android:background="@drawable/title_bar_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cartRecyclerView"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/title_bar_background"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                >
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/customerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/title_bar_background">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location Details"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:background="@color/white"
                        android:id="@+id/loading"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnGroup">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manual"
                            android:textColor="@color/white"
                            android:textSize="15dp"/>
                        <RadioButton
                            android:textColorHighlight="@color/white"
                            android:id="@+id/manualCheck"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automatic"
                            android:textColor="@color/white"
                            android:textSize="15dp"/>
                        <RadioButton
                            android:textColorHighlight="@color/white"
                            android:id="@+id/autoCheck"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/address"
                        android:textStyle="italic"
                        android:textColorHint="@color/white"
                        android:hint="â€Ž340 Heather Keys, West Ianhaven, B..."
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City :"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>
                    <EditText
                        android:id="@+id/city"
                        android:textStyle="italic"
                        android:textColorHint="@color/white"
                        android:hint="West Ianhaven"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/paymentDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/title_bar_background">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Details"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="15dp"/>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>