<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/notconnected"
    tools:context=".NotConnectionActivity">



        <ImageView
            android:id="@+id/nointernet"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="170dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/no_internet_icon"/>

        <TextView
            android:id="@+id/txt_nointernet"
            android:layout_marginTop="30dp"
            android:layout_below="@id/nointernet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="NO INTERNET CONNECTION"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:layout_marginLeft="115dp"
            android:layout_below="@id/txt_nointernet"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/btn_retry"/>


</RelativeLayout>